<div class='flex'>
  <div class='modal__img--wrapper'>

{{#if poster_path}}
          <img
          onerror="this.onerror=null; this.classList.add('film-card__image--no-image');"
          src="{{full_path}}"
          class="modal__img"
          loading="lazy"
          alt="{{original_title}}"
          >
        {{else}}
          <div class="modal__img film-card__image--no-image"></div>
        {{/if}}

    {{!-- <img class='modal__img' src='{{full_path}}' alt='image-film' /> --}}
  </div>
  <div class='modal__description'>
    <h2 class='modal__title'>{{title}}</h2>

    <!-- <ul class="modal__list">
        <li class="modal__item"> -->
    <table class='modal__table'>
      <tr class='modal__tr'>
        <td class='modal__td-lable'>Vote / Votes</td>
        <td class='modal__td-text'>
          <span class='modal__td-text--accent'>{{vote_average}}</span>
          <span class='modal__td-text--slash'>/</span>
          <span class='modal__td-text--all'>{{vote_count}}</span>
        </td>
      </tr>
      <tr class='modal__tr'>
        <td class='modal__td-lable'>Popularity</td>
        <td class='modal__td-text'>{{popularity}}</td>
      </tr>
      <tr class='modal__tr'>
        <td class='modal__td-lable'>Original Title</td>
        <td class='modal__td-text'>{{original_title}}</td>
      </tr>
      <tr class='modal__tr'>
        <td class='modal__td-lable'>Genre</td>
        <td class='modal__td-text'>{{genres}}</td>
      </tr>
    </table>

    <h2 class='modal__subtitle'>About</h2>

    <p class='modal__text'>
      {{overview}}
    </p>
    <ul class='modal__button-list'>
      <li class='modal__button-item'>
        <button
          class='modal__button modal__button--accent modal__button--watched'
          type='button'
          data-action='watched'
        >
          add to watched
        </button>
      </li>
      <li>
        <button
          class='modal__button modal__button--queued'
          type='button'
          data-action='queue'
        >
          add to queue
        </button>
      </li>
    </ul>
  </div>
</div>